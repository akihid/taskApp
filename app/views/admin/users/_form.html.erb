<% if @user.errors.any? %>
<div id="error_explantion">
  <h2><%= pluralize(@user.errors.count ,  t('err_msg.err_count') )%><%= t('err_msg.has_error') %></h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li><br>
    <% end %>
  </ul>
  </div>
<% end %>
<%= form_with(model: @user , local: true , class:"form_container" ,url: admin_new_or_edit) do |f| %>

  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name,class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :mail%>
    <%= f.email_field :mail,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :password%>
    <%= f.password_field :password,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation%>
    <%= f.password_field :password_confirmation,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :role%>
    <%= f.select :role,  User.roles.keys ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :icon%>
    <%= f.file_field :icon, class:"form-control"%>
  </div>

  <div class="align_center">
    <%= f.submit t('btn.submit') ,class:"btn-sm"%>
    <%= link_to t('btn.to_index') , admin_users_path ,class:"btn-sm btn-dark"%>
  </div>
<% end %>