<div class="width_50">
  <h1><%= t('view.show_group_title') %></h1>

  <div class="d-flex align-items-center mt-4 mb-4">
      <div class="ml-auto posts_button">
      </div>
  </div>

  <div class="card">
    <div class="card-header .bg-dark">
      <h4><%= @group.name %></h4>
    </div>
    <div class="card-body height_200">
    <%= form_with(url: group_members_path(id: @group.id), local: true) do |f|%>
      <div class="input-group input-group-sm">
        <%= text_field_tag :mail, '', { class: 'form-control', placeholder: '招待したい人のメールアドレスを入力してください' } %>
        <%= f.submit '招待' ,class:"btn-sm"%>
      </div>
    <% end %>
        <p class="card-text">メンバー一覧</p>
        <% @group.assign_members.each do |member| %>
          <p>
            名前：<%= member.name%>
            <%= link_to '削除' , group_member_path(user_id: member.id) , method: :delete , data:{confirm: "解除してもよろしいですか？"} %>
          </p>
        <% end %>
        
    </div>
    <div class="card-footer align_center">
      <%= link_to t('btn.to_index') , tasks_path ,class:"btn-sm btn-dark"%>
    </div>
  </div>

</div>
