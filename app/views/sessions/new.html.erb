<div class="width_50">
  <h1><%= t('view.new_login_title') %></h1>

  <%= form_with(scope: :session , url: sessions_path ,local: true , class:"session_form_container") do |f| %>
    <div class="form-group">
      <%= f.label :mail , User.human_attribute_name('mail')%>
      <%= f.email_field :mail,class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :password , User.human_attribute_name('password')%>
      <%= f.password_field :password,class:"form-control"%>
    </div>

    <div class="align_center">
      <%= f.submit t('btn.submit') ,class:"btn-sm"%>
    </div>
  <% end %>
</div>