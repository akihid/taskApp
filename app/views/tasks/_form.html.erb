
<%= form_with(model: @task , local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title%>
  </div>

  <div class="form-group">
    <%= f.label :content%>
    <%= f.text_area :content%>
  </div>

    <div class="form-group">
    <%= f.label :deadline_at%>
    <%= f.date_field :deadline_at%>
  </div>

    <div class="form-group">
    <%= f.label :priority%>
    <%= f.text_field :priority%>
  </div>

    <div class="form-group">
    <%= f.label :status%>
    <%= f.text_field :status%>
  </div>

  <%= f.submit t('btn.submit') %>
  <%= link_to t('btn.to_index') , tasks_path %>



<% end %>