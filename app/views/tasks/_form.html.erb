<% if @task.errors.any? %>
<div id="error_explantion">
  <h2><%= pluralize(@task.errors.count ,  t('err_msg.err_count') )%><%= t('err_msg.has_error') %></h2>
  <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with(model: @task , local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title%>
  </div>

  <div class="form-group">
    <%= f.label :content%>
    <%= f.text_area :content%>
  </div>

  <div class="form-group">
    <%= f.label :deadline_at%>
    <%= f.date_field :deadline_at%>
  </div>

  <div class="form-group">
    <%= f.label :priority%>
    <%= f.select :priority,  Task.priorities.keys%>
  </div>

  <div class="form-group">
    <%= f.label :status%>
    <%= f.select :status,  Task.statuses.keys%>
  </div>

  <%= f.submit t('btn.submit') %>
  <%= link_to t('btn.to_index') , tasks_path %>

<% end %>