<h1>Tasks#index</h1>

<% @tasks.each do |task| %>
  <div>
    <%= task.title %>
    <%= task.content %>
    <%= link_to "詳細", task_path(task.id)%>
    <%= link_to "編集" , edit_task_path(task.id) %>
    <%= link_to "削除", task_path(task.id), method: :delete, data:{ confirm: "削除してもよろしいですか？" } %>
  </div>
<% end %>

<%= link_to "新規作成" , new_task_path%>
