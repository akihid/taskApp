<h1>Tasks#new</h1>

<%= form_with(model: @task , local: true ) do |f| %>

  <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title%>
  </div>

  <div class="form-group">
    <%= f.label :content%>
    <%= f.text_area :content%>
  </div>

    <div class="form-group">
    <%= f.label :deadline_at%>
    <%= f.date_field :deadline_at%>
  </div>

    <div class="form-group">
    <%= f.label :priority%>
    <%= f.text_field :priority%>
  </div>

    <div class="form-group">
    <%= f.label :status%>
    <%= f.text_field :status%>
  </div>

  <%= f.submit '登録' %>
  <%= link_to '一覧へ' , tasks_path %>



<% end %>