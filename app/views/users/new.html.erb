<div class="width_50">
  <h1><%= t('view.new_user_title') %></h1>

  <% if @user.errors.any? %>
<div id="error_explantion">
  <h2><%= pluralize(@users.errors.count ,  t('err_msg.err_count') )%><%= t('err_msg.has_error') %></h2>
  <ul>
    <% @users.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with(model: @user , local: true , class:"user_form_container") do |f| %>

  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name,class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :mail%>
    <%= f.email_field :mail,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :password%>
    <%= f.password_field :password,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation%>
    <%= f.password_field :password_confirmation,class:"form-control"%>
  </div>
  <div class="align_center">
    <%= f.submit t('btn.submit') ,class:"btn-sm"%>
  </div>
<% end %>
</div>